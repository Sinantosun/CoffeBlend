@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}



<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hakkımızda Alanı</h4>
            <p class="card-description">
                Hakkımızda alanı burada yer almaktadır silme güncelleme ekleme işlemlerini bu sayfa üzerinden gerçekleştirebilirsiniz<br /> <small><strong>Lütfen bu alanda bir adet veri bulundurun aksi durumda tema bütünlüğü bozulmaktadır.</strong></small>
            </p>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Kısa Başlık</th>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th class="text-center" colspan="2">işlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ShortTitle</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td style="width:40px"><button onclick="DeleteAbout(@item.AboutId)" class="btn btn-danger btn-icon-text d-flex align-items-center"><i class="ti-trash btn-icon-prepend"></i>Sil</button></td>
                                <td style="width:40px"><a href="/Admin/About/UpdateAbout/@item.AboutId" class="btn btn-success btn-icon-text d-flex align-items-center"><i class="ti-pencil-alt btn-icon-prepend"></i>Güncelle</a> </td>

                            </tr>
                        }


                    </tbody>
                </table>
                <br />
                <a href="/Admin/About/CreateAbout" class="btn btn-outline-primary btn-sm  btn-icon-text"> <i class="ti-pencil btn-icon-prepend"></i>Yeni Alan Ekle</a>
            </div>
        </div>
    </div>
</div>


<script>
    function DeleteAbout(id) {
        Swal.fire({
            title: "Kayıt Silme Onayı",
            text: "Hakkımızda kaydını silmek istediğinize emin misiniz?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Sil",
            cancelButtonText: "Vazgeç",
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Admin/About/DeleteAbout/" + id;
            }
        });
    }
</script>
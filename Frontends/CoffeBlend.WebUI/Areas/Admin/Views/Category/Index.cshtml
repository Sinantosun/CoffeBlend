
@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kategori Alanı</h4>
            <p class="card-description">
                Kategori alanı burada yer almaktadır silme güncelleme ekleme işlemlerini bu sayfa üzerinden gerçekleştirebilirsiniz
            </p>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Kategori Adı</th>
                            <th class="text-center" colspan="2">işlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td style="width:40px"><button onclick="DeleteCategory(@item.CategoryId)" class="btn btn-danger d-flex align-items-center btn-icon-text"><i class="ti-trash btn-icon-prepend"></i>Sil</button></td>
                                <td style="width:40px"><a href="/Admin/Category/UpdateCategory/@item.CategoryId" class="btn btn-success d-flex align-items-center  btn-icon-text"><i class="ti-pencil-alt btn-icon-prepend"></i> Güncelle</a></td>
                            </tr>
                        }


                    </tbody>
                </table>
                <br />
                <a href="/Admin/Category/CreateCategory" class="btn btn-outline-primary btn-sm  btn-icon-text"> <i class="ti-pencil btn-icon-prepend"></i>Yeni Alan Ekle</a>
            </div>
        </div>
    </div>
</div>


<script>
    function DeleteCategory(id) {
        Swal.fire({
            title: "Kayıt Silme Onayı",
            text: "Kategori kaydını silmek istediğinize emin misiniz?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Sil",
            cancelButtonText: "Vazgeç",
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Admin/Category/DeleteCategory/" + id;
            }
        });
    }
</script>

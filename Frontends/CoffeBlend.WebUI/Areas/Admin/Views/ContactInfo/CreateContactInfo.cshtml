@model CreateContactInfoDto
@{
    ViewData["Title"] = "CreateContactInfo";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}



<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni İletişim Bilgisi ekleme sayfası</h4>
            <p class="card-description">
                İletişim bilgisini aşağıdaki form üzerinden ekliyebilirsiniz. Lütfen bilgileri eksiksiz olarak doldurun.
            </p>
            <form method="post" class="forms-sample">
                <div class="form-group">
                    <label for="exampleInputTitlte">İkon 1 </label>
                    <input type="text" class="form-control" id="exampleInputTitlte" asp-for="Icon1" placeholder="İkon 1">
                </div> 
                <div class="form-group">
                    <label for="exampleInputTitlte">Başlık 1 </label>
                    <input type="text" class="form-control" id="exampleInputTitlte" asp-for="Title1" placeholder="Başlık 1">
                </div>
                <div class="form-group">
                    <label for="exampleInputDescription">Açıklama 1</label>
                    <textarea rows="10" class="form-control" id="exampleInputDescription" asp-for="Description1" placeholder="Açıklama 1"></textarea>
                </div>


                <div class="form-group">
                    <label for="exampleInputTitlte">İkon 2 </label>
                    <input type="text" class="form-control" id="exampleInputTitlte" asp-for="Icon2" placeholder="İkon 2">
                </div>
                <div class="form-group">
                    <label for="exampleInputTitlte">Başlık 2 </label>
                    <input type="text" class="form-control" id="exampleInputTitlte" asp-for="Title2" placeholder="Başlık 2">
                </div>
                <div class="form-group">
                    <label for="exampleInputDescription">Açıklama 2</label>
                    <textarea rows="10" class="form-control" id="exampleInputDescription" asp-for="Description2" placeholder="Açıklama 2"></textarea>
                </div>


                <div class="form-group">
                    <label for="exampleInputTitlte">İkon 3 </label>
                    <input type="text" class="form-control" id="exampleInputTitlte" asp-for="Icon3" placeholder="İkon 3">
                </div>
                <div class="form-group">
                    <label for="exampleInputTitlte">Başlık 3 </label>
                    <input type="text" class="form-control" id="exampleInputTitlte" asp-for="Title3" placeholder="Başlık 3">
                </div>
                <div class="form-group">
                    <label for="exampleInputDescription">Açıklama 3</label>
                    <textarea rows="10" class="form-control" id="exampleInputDescription" asp-for="Description3" placeholder="Açıklama 3"></textarea>
                </div>

                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>
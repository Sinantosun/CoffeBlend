@model List<ResultContactInfoDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">İletişim Bilgileri Alanı</h4>
            <p class="card-description">
              İletişim Bilgileri alanı burada yer almaktadır silme güncelleme ekleme işlemlerini bu sayfa üzerinden gerçekleştirebilirsiniz<br /> <small><strong>Lütfen bu alanda bir adet veri bulundurun aksi durumda tema bütünlüğü bozulmaktadır.</strong></small>
            </p>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>İkon</th>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th class="text-center" colspan="2">işlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Icon</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td style="width:40px"><button onclick="DeleteContactInfo(@item.ContactInfoId)" class="btn btn-outline-danger d-flex align-items-center btn-icon-text"><i class="ti-trash btn-icon-prepend"></i> Sil</button></td>
                                <td style="width:40px"><a href="/Admin/ContactInfo/UpdateContactInfo/@item.ContactInfoId" class="btn btn-outline-success d-flex align-items-center btn-icon-text"><i class="ti-pencil-alt btn-icon-prepend">  </i>Güncelle</a></td>
                            </tr>
                        }


                    </tbody>
                </table>
                <br />
                <a href="/Admin/ContactInfo/CreateContactInfo" class="btn btn-outline-primary btn-sm  btn-icon-text"> <i class="ti-pencil btn-icon-prepend"></i>Yeni Alan Ekle</a>
            </div>
        </div>
    </div>
</div>


<script>
    function DeleteContactInfo(id) {
        Swal.fire({
            title: "Kayıt Silme Onayı",
            text: "İletişim bilgisi kaydını silmek istediğinize emin misiniz?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Sil",
            cancelButtonText: "Vazgeç",
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Admin/ContactInfo/DeleteContactInfo/" + id;
            }
        });
    }
</script>
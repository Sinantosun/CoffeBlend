@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Öne Çıkan Alanı</h4>
            <p class="card-description">
                Önce Çıkan alanı burada yer almaktadır silme güncelleme ekleme işlemlerini bu sayfa üzerinden gerçekleştirebilirsiniz
            </p>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Görsel</th>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                       
                            <th colspan="2">işlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><img src="@item.Image" style="width:75px; height:75px" /></td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td style="width:40px"><button onclick="DeleteFeature(@item.FeatureId)" class="btn btn-outline-danger   btn-icon-text"><i class="ti-trash btn-icon-prepend"></i>Sil</button></td>
                                <td style="width:40px"><a href="/Admin/Feature/UpdateFeature/@item.FeatureId" class="btn btn-outline-success   btn-icon-text"><i class="ti-pencil-alt btn-icon-prepend"> Güncelle </i></a></td>
                            </tr>
                        }


                    </tbody>
                </table>
                <br />
                <a href="/Admin/Feature/CreateFeature" class="btn btn-outline-primary btn-sm  btn-icon-text"> <i class="ti-pencil btn-icon-prepend"></i>Yeni Alan Ekle</a>
            </div>
        </div>
    </div>
</div>


<script>
    function DeleteFeature(id) {
        Swal.fire({
            title: "Kayıt Silme Onayı",
            text: "Hakkımızda kaydını silmek istediğinize emin misiniz?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Sil",
            cancelButtonText: "Vazgeç",
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Admin/Feature/DeleteFeature/" + id;
            }
        });
    }
</script>

@model List<ResultMenuDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}




<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Menü Alanı</h4>
            <p class="card-description">
                Menü alanı burada yer almaktadır silme güncelleme ekleme işlemlerini bu sayfa üzerinden gerçekleştirebilirsiniz
            </p>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Kısa Başlık</th>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th>Görsel 1</th>
                            <th>Görsel 2</th>
                            <th>Görsel 3</th>
                            <th>Görsel 4</th>

                            <th colspan="2">işlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ShortTitle</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td><img src="@item.Image1" style="width:75px; height:75px" /></td>
                                <td><img src="@item.Image2" style="width:75px; height:75px" /></td>
                                <td><img src="@item.Image3" style="width:75px; height:75px" /></td>
                                <td><img src="@item.Image4" style="width:75px; height:75px" /></td>
                                <td><button onclick="DeleteMenu(@item.MenuId)" class="btn btn-outline-danger btn-sm btn-icon-text"><i class="ti-trash btn-icon-prepend"></i>Sil</button></td>
                                <td><a href="/Admin/Menu/UpdateMenu/@item.MenuId" class="btn btn-outline-success btn-sm  btn-icon-text"><i class="ti-pencil-alt btn-icon-prepend"> Güncelle </i></a></td>
                            </tr>
                        }


                    </tbody>
                </table>
                <br />
                <a href="/Admin/Menu/CreateMenu" class="btn btn-outline-primary btn-sm  btn-icon-text"> <i class="ti-pencil btn-icon-prepend"></i>Yeni Alan Ekle</a>
            </div>
        </div>
    </div>
</div>


<script>
    function DeleteMenu(id) {
        Swal.fire({
            title: "Kayıt Silme Onayı",
            text: "Menü kaydını silmek istediğinize emin misiniz?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Sil",
            cancelButtonText: "Vazgeç",
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Admin/Menu/DeleteMenu/" + id;
            }
        });
    }
</script>



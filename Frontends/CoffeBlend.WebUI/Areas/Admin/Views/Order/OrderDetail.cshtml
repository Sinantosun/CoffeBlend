@using CoffeBlend.DtoLayer.TableDetailDtos
@model List<ResultTableOrderListByTableIdDto>
@{
    ViewData["Title"] = "OrderDetail";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Siparişler Alanı</h4>
            <p class="card-description">
                @ViewBag.tableName İçin Sipariş Listesi
            </p>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ürün Adı</th>
                            <th>Birim Fiyat</th>
                            <th>Adet</th>
                            <th>Birim * Adet</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.productName</td>
                                <td>@item.unitPrice</td>
                                <td>@item.quantity</td>
                                <td>@item.totalPrice</td>
                            

                            </tr>
                        }
                        <tr style="text-align:end">
                            <th colspan="5">Toplam Fiyat @Model.Sum(t=>t.totalPrice).ToString("C2")</th>
                        </tr>

                    </tbody>
                </table>
               
                <br />
            </div>
        </div>
    </div>
</div>


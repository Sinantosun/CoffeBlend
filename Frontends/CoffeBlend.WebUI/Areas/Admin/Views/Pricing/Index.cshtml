@model List<ResultPricingDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;

}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ürünler için ödeme planları</h4>
            <p class="card-description">
                Özellikle kahve ürünlerinde small medium large gibi özelliklerin ürünlere eklenmesi için sa ilgili özellikleri ekleyebilir silebilir veya güncelleyebilirsiniz.
            </p>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                   
                            <th class="text-center" colspan="2">işlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <td>@item.Name</td>
                             
                                <td style="width:40px"><button onclick="DeletePricing(@item.PricingId)" class="btn btn-outline-danger btn-sm btn-icon-text"><i class="ti-trash btn-icon-prepend"></i>Sil</button></td>
                                <td style="width:40px"><a href="/Admin/Pricing/UpdatePricing/@item.PricingId" class="btn btn-outline-success btn-sm  btn-icon-text"><i class="ti-pencil-alt btn-icon-prepend"> Güncelle </i></a></td>
                            </tr>
                        }


                    </tbody>
                </table>
                <br />
                <a href="/Admin/Pricing/CreatePricing" class="btn btn-outline-primary btn-sm  btn-icon-text"> <i class="ti-pencil btn-icon-prepend"></i>Yeni Alan Ekle</a>
            </div>
        </div>
    </div>
</div>


<script>
    function DeletePricing(id) {
        Swal.fire({
            title: "Kayıt Silme Onayı",
            text: "Kaydı silmek istediğinize emin misiniz?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Sil",
            cancelButtonText: "Vazgeç",
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Admin/Pricing/DeletePricing/" + id;
            }
        });
    }
</script>



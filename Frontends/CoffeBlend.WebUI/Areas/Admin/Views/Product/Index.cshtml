@model List<ResultPrdouctWithCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ürünler Alanı</h4>
            <p class="card-description">
                Ürünler Alanı burada yer almaktadır silme güncelleme ekleme işlemlerini bu sayfa üzerinden gerçekleştirebilirsiniz 
            </p>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Görsel</th>
                            <th>Ürün Adı</th>
                            <th>Kategori</th>
                            <th>Fiyat</th>

                            <th class="text-center" colspan="3">işlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <td><img src="@item.ImageURL"  style="width:100px; height:100px" /></td>
                                <td>@item.Title</td>
                                <td>@item.CategoryName</td>
                                <td>@item.Price.ToString("C2")</td>
                                <td><button onclick="DeleteProduct(@item.ProductId)" class="btn btn-danger tn-icon-text"><i class="ti-trash btn-icon-prepend"></i> Sil</button></td>
                                <td><a href="/Admin/Product/UpdateProduct/@item.ProductId" class="btn btn-success btn-icon-text"><i class="ti-pencil-alt btn-icon-prepend"> Güncelle </i></a></td>
                                <td><a href="/Admin/Product/ProductPrice/@item.ProductId" class="btn btn-primary  btn-icon-text"><i class="ti-plus btn-icon-prepend"> Fiyat Bilgisi Ekle  </i></a></td>
                            </tr>
                        }


                    </tbody>
                </table>
                <br />
                <a href="/Admin/Product/CreateProduct" class="btn btn-outline-primary btn-sm  btn-icon-text"> <i class="ti-pencil btn-icon-prepend"></i>Yeni Alan Ekle</a>
            </div>
        </div>
    </div>
</div>


<script>
    function DeleteProduct(id) {
        Swal.fire({
            title: "Kayıt Silme Onayı",
            text: "Ürün kaydını silmek istediğinize emin misiniz?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Sil",
            cancelButtonText: "Vazgeç",
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Admin/Product/DeleteProduct/" + id;
            }
        });
    }
</script>


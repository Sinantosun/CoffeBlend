@model List<GetProductPricingByProductIdDto>
@{
    ViewData["Title"] = "ProductPriceList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}



<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ürünlere ait fiyat listesi</h4>
            <p class="card-description">
                <b>@Model.Select(t => t.ProductName).FirstOrDefault() </b> Ürüne ait fiyat listesine buradan erişebilirsiniz silme güncelleme işlemleri bu alan üzerinden yapılmaktadır.
            </p>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                     
                            <th>Fiyat Başlığı</th>
                            <th>Fiyat Fiyat</th>
                    
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                       
                            <tr>
                                <td>@item.PricingTitle</td>
                                <td>@item.Amount</td>
                             
                            </tr>
                        }


                    </tbody>
                </table>
               
                <a href="/Admin/Product/ProductPrice/@Model.Select(t=>t.ProductId).FirstOrDefault()" class="btn btn-outline-primary btn-sm  btn-icon-text"> <i class="ti-pencil btn-icon-prepend"></i>Yeni Alan Ekle</a>
            </div>
        </div>
    </div>
</div>


<script>
    function DeleteProduct(id) {
        Swal.fire({
            title: "Kayıt Silme Onayı",
            text: "Ürün kaydını silmek istediğinize emin misiniz?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Sil",
            cancelButtonText: "Vazgeç",
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Admin/Product/DeleteProduct/" + id;
            }
        });
    }
</script>



@model List<ResultReservationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Rezervasyon Alanı</h4>
            <p class="card-description">
                Rezervasyon alanı burada yer almaktadır onaylama iptal etme bekletme güncelleme ekleme işlemlerini bu sayfa üzerinden gerçekleştirebilirsiniz
            </p>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ad Soyad</th>
                            <th>Tarih</th>
                            <th>Durum</th>
                            <th colspan="5" class="text-center">işlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.NameSurname</td>
                                <td>@(((DateTime)item.Date).ToString("f"))</td>
                                <td><a href="/Admin/Reservation/UpdateReservation/@item.ReservationId" class="btn btn-primary btn-rounded btn-sm   btn-icon-text"><i class="ti-pencil-alt btn-icon-prepend"> Onayla </i></a></td>
                                <td><button onclick="DeleteReservation(@item.ReservationId)" class="btn btn-warning btn-sm  btn-rounded btn-icon-text"><i class="ti-close btn-icon-prepend"></i>İptal Et</button></td>
                                <td><a href="/Admin/Reservation/UpdateReservation/@item.ReservationId" class="btn btn-sm  btn-info btn-rounded btn-icon-text"><i class="ti-control-pause btn-icon-prepend"> Beklet </i></a></td>
                                <td><a href="/Admin/Reservation/UpdateReservation/@item.ReservationId" class="btn btn-sm  btn-danger  btn-rounded btn-icon-text"><i class="ti-trash btn-icon-prepend"> Sil </i></a></td>
                                <td><a href="/Admin/Reservation/UpdateReservation/@item.ReservationId" class="btn btn-sm  btn-success   btn-icon-text"><i class="ti-trash btn-icon-prepend"> Güncelle </i></a></td>

 
                            </tr>
                        }


                    </tbody>
                </table>
                <br />
                <a href="/Admin/Reservation/CreateReservation" class="btn btn-outline-primary btn-sm  btn-icon-text"> <i class="ti-pencil btn-icon-prepend"></i>Yeni Alan Ekle</a>
            </div>
        </div>
    </div>
</div>


<script>
    function DeleteReservation(id) {
        Swal.fire({
            title: "Rezervasyon İptal Onayı",
            text: "Bu rezervasyon iptal edilsin mi?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Sil",
            cancelButtonText: "Vazgeç",
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Admin/Reservation/CancelReservation/" + id;
            }
        });
    }
</script>

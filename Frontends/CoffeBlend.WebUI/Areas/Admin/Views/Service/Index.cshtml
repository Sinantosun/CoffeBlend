@model List<ResultServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}




<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmetler Alanı</h4>
            <p class="card-description">
                Hizmetler alanı burada yer almaktadır onaylama iptal etme bekletme güncelleme ekleme işlemlerini bu sayfa üzerinden gerçekleştirebilirsiniz
            </p>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                          
                            <th>İkon</th>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th colspan="2" class="text-center">işlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>

                                <td>@item.Icon</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>

                                <td><button onclick="DeleteService(@item.ServiceId)" class="btn btn-sm  btn-danger btn-rounded btn-icon-text"><i class="ti-trash btn-icon-prepend"></i>Sil</button></td>

                                <td><a href="/Admin/Service/UpdateService/@item.ServiceId" class="btn btn-sm  btn-success   btn-icon-text"><i class="ti-trash btn-icon-prepend"> Güncelle </i></a></td>


                            </tr>
                        }


                    </tbody>
                </table>
                <br />
                <a href="/Admin/Service/CreateService" class="btn btn-outline-primary btn-sm btn-icon-text"> <i class="ti-pencil btn-icon-prepend"></i>Yeni Alan Ekle</a>
            </div>
        </div>
    </div>
</div>


<script>
    function DeleteService(id) {
        Swal.fire({
            title: "Kayıt Silme Onayı",
            text: "Hizmet kaydını silmek istediğinizden emin misiniz?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Sil",
            cancelButtonText: "Vazgeç",
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Admin/Service/DeleteService/" + id;
            }
        });
    }
</script>


@model ResultStatisticByIdDto
@{
    ViewData["Title"] = "UpdateStatistic";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}




<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">İstatistik güncelleme sayfası</h4>
            <p class="card-description">
                İstatistik bilgisini aşağıdaki form üzerinden ekliyebilirsiniz. Lütfen bilgileri eksiksiz olarak doldurun.
            </p>
            <form method="post" class="forms-sample">
                <div class="form-group">
                    <input type="hidden" asp-for="StatisticId">
                    <label for="exampleInputIcon">İkon</label>
                    <input type="text" class="form-control" id="exampleInputIcon" asp-for="Icon" placeholder="İkon">
                </div>
                <div class="form-group">
                    <label for="exampleInputIcon">Başlık</label>
                    <input type="text" class="form-control" id="exampleInputIcon" asp-for="Title" placeholder="Başlık">
                </div>
                <div class="form-group">
                    <label for="exampleInputIcon">Miktar</label>
                    <input type="text" class="form-control" id="exampleInputIcon" asp-for="Amount" placeholder="Miktar">
                </div>
                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
            </form>
        </div>
    </div>
</div>


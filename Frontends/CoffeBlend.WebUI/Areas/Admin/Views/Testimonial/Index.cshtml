@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}



<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Referanslar Alanı</h4>
            <p class="card-description">
                Referanslar alanı burada yer almaktadır onaylama iptal etme bekletme güncelleme ekleme işlemlerini bu sayfa üzerinden gerçekleştirebilirsiniz
            </p>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ad Soyad</th>
                            <th>Tarih</th>
                            <th>Durum</th>
                            <th colspan="5" class="text-center">işlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.NameSurname</td>
                                <td>@item.Title</td>
                                <td>@item.Comment</td>

                                <td><a href="/Admin/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-sm  btn-danger  btn-rounded btn-icon-text"><i class="ti-trash btn-icon-prepend"> Sil </i></a></td>
                                <td><a href="/Admin/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-sm  btn-success   btn-icon-text"><i class="ti-trash btn-icon-prepend"> Güncelle </i></a></td>


                            </tr>
                        }


                    </tbody>
                </table>
                <br />
                <a href="/Admin/Testimonial/CreateTestimonial" class="btn btn-outline-primary btn-sm  btn-icon-text"> <i class="ti-pencil btn-icon-prepend"></i>Yeni Alan Ekle</a>
            </div>
        </div>
    </div>
</div>


<script>
    function DeleteTestimonial(id) {
        Swal.fire({
            title: "Kayıt Silme Onayı",
            text: "Referans kaydını silmek istedinizden emin misiniz?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Sil",
            cancelButtonText: "Vazgeç",
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Admin/Testimonial/DeleteTestimonial/" + id;
            }
        });
    }
</script>

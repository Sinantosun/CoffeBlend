@model ResultTestimonialByIdDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Referans ekleme sayfası</h4>
            <p class="card-description">
                Referans bilgisini aşağıdaki form üzerinden ekliyebilirsiniz. Lütfen bilgileri eksiksiz olarak doldurun.
            </p>
            <form method="post" class="forms-sample">
                <input type="hidden" asp-for="TestimonialID">
                <div class="form-group">
                    <label for="exampleInputShortName">Ad Soyad</label>
                    <input type="text" class="form-control" id="exampleInputShortName" asp-for="NameSurname" placeholder="Ad Soyad">
                </div>
                <div class="form-group">
                    <label for="exampleInputLocation">Lokasyon</label>
                    <input type="text" class="form-control" id="exampleInputLocation" asp-for="Title" placeholder="Lokasyon bilgisi">
                </div>
                <div class="form-group">
                    <label for="exampleInputComment">Yorum</label>
                    <textarea rows="10" class="form-control" id="exampleInputComment" asp-for="Comment" placeholder="Yorum"></textarea>
                </div>


                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
            </form>
        </div>
    </div>
</div>







<div class="book p-4">
    <h3>Rezervasyon oluştur</h3>
    <form method="post" asp-action="CreateReservation" asp-controller="Default" class="appointment-form">
        <div class="d-md-flex">
            <div class="form-group">
                <input type="text" class="form-control" name="NameSurname" placeholder="Adınız Soyadınız">
            </div>
            <div class="form-group ml-md-4">
                <input type="text" class="form-control" name="Email" placeholder="Email">
            </div>
        </div>
        <div class="d-md-flex">
            <div class="form-group">
                <div class="input-wrap">
                    <input type="datetime-local" name="Date" class="form-control" placeholder="Date">
                </div>
            </div>
           
            <div class="form-group ml-md-4">
                <input type="text" class="form-control" name="Phone" placeholder="Telefon Numarası">
            </div>
            <div class="form-group ml-md-4">
                <select id="TableDrop"  name="TableID" asp-items="@ViewBag.ActiveTableList" class="form-control"><option>Masa Seçiniz</option></select>
            </div>
        </div>
        <div class="d-md-flex">
            <div class="form-group">
                <textarea name="SpecialRequest" id="" cols="30" rows="2" class="form-control" placeholder="Özel İstekler"></textarea>
            </div>
            <div class="form-group ml-md-4">
                <input type="submit" value="Appointment" class="btn btn-white py-3 px-4">
            </div>
        </div>
    </form>
</div>

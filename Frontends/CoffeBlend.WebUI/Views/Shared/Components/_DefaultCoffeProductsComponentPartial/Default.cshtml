@model List<ResultLast5CoffeProduct>
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-3">
            <div class="col-md-7 heading-section ftco-animate text-center">
                <span class="subheading">Son Eklenen</span>
                <h2 class="mb-4">Sıcak İcecek ürünlerimiz</h2>
                <p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.</p>
            </div>
        </div>
        <div class="row">
           @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="menu-entry">
                        <a href="#" class="img" style="background-image: url(@item.ImageURL);"></a>
                        <div class="text text-center pt-4">
                            <h3><a href="#">@item.Title</a></h3>
                            <p>@item.ShortDescription</p>
                           
                            <p><a href="/ProductDetail/Index/@item.ProductId" class="btn btn-primary btn-outline-primary">Detaylar</a></p>
                        </div>
                    </div>
                </div>
            }
            
        </div>
    </div>
</section>